<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/main_text"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareroundeb"
        android:lineSpacingExtra="15dp"
        android:text="친구 목록에 없다면?"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_text"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@drawable/line" />

    <Button
        android:id="@+id/self"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:background="@drawable/go_but2"
        android:drawableStart="@drawable/gift_icon_drawble"
        android:fontFamily="@font/nanumsquareroundeb"
        android:gravity="center|left"
        android:lineSpacingExtra="10dp"
        android:paddingLeft="15dp"
        android:text="    직접 정보 고르고\n    맞춤형 선물 받기"

        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <Button
        android:id="@+id/make_g"
        android:layout_width="380dp"
        android:layout_height="130dp"
        android:background="@drawable/go_but2_1"
        android:fontFamily="@font/nanumsquareroundeb"
        android:gravity="center|right"
        android:lineSpacingExtra="10dp"
        android:paddingRight="60dp"
        android:text="밸런스 게임 보내서  \n상대방 취향 알아내기"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.755" />


</androidx.constraintlayout.widget.ConstraintLayout>