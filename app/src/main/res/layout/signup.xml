<!-- activity_signup.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- 회원가입 텍스트 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- 경계선 -->

    <!-- 아이디 -->

    <!-- 이메일 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundr"
            android:gravity="center"
            android:text="아이디"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:background="#ECECEC"
                android:fontFamily="@font/nanumsquareroundr"
                android:hint="아이디 입력"
                android:paddingStart="10dp"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 동의 체크박스 -->

    <!-- 비밀번호 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundr"
            android:gravity="center"
            android:text="비밀번호"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ECECEC"
                android:fontFamily="@font/nanumsquareroundr"
                android:hint="비밀번호 입력"
                android:paddingStart="10dp"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 비밀번호 확인 -->

    <!-- 나이 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundr"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:text="비밀번호\n확인"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ECECEC"
                android:fontFamily="@font/nanumsquareroundr"
                android:hint="다시 한번 입력해주세요."
                android:paddingStart="10dp"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundr"
            android:gravity="center"
            android:text="나의 나이"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ECECEC"
                android:fontFamily="@font/nanumsquareroundr"
                android:hint="나이 입력"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 성별 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanumsquareroundr"
        android:text="나의 성별"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <!-- 성별 카테고리 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:cardCornerRadius= "16dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="여성"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
         >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="남성"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="선택 안함"
                android:textColor="@color/black" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 나의 MBTI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareroundr"
            android:gravity="center"
            android:text="MBTI"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#ECECEC"
                android:fontFamily="@font/nanumsquareroundr"
                android:hint="MBTI 입력"
                android:paddingStart="10dp"
                android:textSize="14sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- SNS 연동하기 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/nanumsquareroundr"
        android:text="SNS 연동하기"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <!-- SNS 연동하기 텍스트 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareroundr"
        android:text="친구를 찾고 서로의 취향을 공유해주세요!"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/kakaotalk_image" />

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/insta_image" />

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/facebook_image" />



    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:fontFamily="@font/nanumsquareroundb"
        android:text="다음으로" />



</LinearLayout>
